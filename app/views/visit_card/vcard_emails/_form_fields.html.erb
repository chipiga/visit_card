<fieldset class="inputs email">
  <legend>Email</legend>
  <ol>
    <li class="field">
      <%= ff.check_box_collection :types, VcardEmail::TYPES %>
    </li>
    <li class="field">
      <%= ff.label :value %>
      <%= ff.email_field :value %>
    </li>
  </ol>
  <%= ff.hidden_field :_destroy, :value => '' %>
  <a href='#' class='remove'>Remove</a>
</fieldset>